{
  "name": "MAL-Microservice Dev Environment",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/src",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/sh"
  },
  "extensions": [
    "ms-dotnettools.csharp"
  ],
  "forwardPorts": [8080, 8081],
  "postCreateCommand": "dotnet restore",
  "remoteUser": "root"
}